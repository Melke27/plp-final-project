  },
  "homepage": "https://plp-final-melkamu.netlify.app",
  "devDependencies": {
    "netlify-cli": "^17.0.0",
    "serve": "^14.2.0",
    "lite-server": "^2.6.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@netlify/functions": "^2.4.0",
    "bootstrap": "^5.3.0",
    "aos": "^2.3.4",
    "swiper": "^11.0.0",
    "chart.js": "^4.4.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
